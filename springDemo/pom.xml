        </dependency>
        <dependency>
            <groupId>com.ckfinder</groupId>
            <artifactId>ckfinder</artifactId>
            <version>2.3</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/web/WEB-INF/lib/ckfinder-2.3.jar</systemPath>
        </dependency>
